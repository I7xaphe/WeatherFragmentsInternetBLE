<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:minHeight="20dp"
    android:background="@drawable/popup_connection"
    android:orientation="vertical"
    >


    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:id="@+id/et_url"
        android:text="http://192.168.8.99"
        android:inputType="textWebEditText"
        android:clickable="false"
        android:shadowColor="#789cea"
        android:textColorLink="#000000"
        android:textColorHighlight="#000000"
        android:contextClickable="true"
        android:enabled="true"
        android:foreground="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"></EditText>
    <Button

        android:layout_width="100dp"
        android:layout_height="40dp"

        android:background="@drawable/buttonshape"
        android:id="@+id/b_set_url"
        android:text="@string/set_url"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/newurl"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

</LinearLayout>